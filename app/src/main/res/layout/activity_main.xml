<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imie"
        android:hint="Wprowadź imie"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nazwisko"
        android:hint="Wprowadź nazwisko"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stanowisko"
        />

    <EditText
        android:id="@+id/znaki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Wprowadź liczbę znaków"
        android:inputType="text" />

    <CheckBox
        android:id="@+id/litery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Małe i wielkie litery" />

    <CheckBox
        android:id="@+id/specjalne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Znaki specjalne" />

    <CheckBox
        android:id="@+id/cyfry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cyfry" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/generuj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Generuj" />

        <Button
            android:id="@+id/zatwierdz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Zatwierdz" />
    </LinearLayout>

</LinearLayout>